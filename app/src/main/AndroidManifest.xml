<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.inipage.homelylauncher">

    <!-- For suggestions. -->
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS"
                     tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <!-- For battery state. -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- For weather. -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- For weather. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- To uninstall apps. -->
    <uses-permission android:name="android.permission.REQUEST_DELETE_PACKAGES"/>
    <!-- Weird permission thing. -->
    <uses-permission android:name="android.permission.EXPAND_STATUS_BAR"/>
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

    <application
        android:name=".ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_policy"
        android:largeHeap="true"
        tools:targetApi="n"
        tools:ignore="AllowBackup">

        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_legacy"
            android:launchMode="singleTop"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait"
            android:theme="@style/HomeTheme"
            android:windowSoftInputMode="stateHidden|adjustPan"
            tools:targetApi="n">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".icons.IconChooserActivity"
            android:label="@string/title_activity_icon_chooser"
            android:theme="@style/AppThemeDarkNoActionBar" />

        <activity
            android:name=".SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/SettingsTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.inipage.homelylauncher.HomeActivity" />
        </activity>

    </application>
</manifest>