<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp">

    <LinearLayout
        android:id="@+id/dock_item_root_container"
        android:background="@drawable/contextual_dock_item_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/contextual_dock_item_icon"
            android:layout_width="@dimen/contextual_dock_icon_size"
            android:layout_height="@dimen/contextual_dock_icon_size"
            android:src="@drawable/dock_icon_alarm"
            android:padding="4dp"
            android:layout_marginVertical="@dimen/contextual_dock_internal_padding"
            android:layout_marginStart="@dimen/contextual_dock_internal_padding_horizontal" />

        <LinearLayout
            android:id="@+id/contextual_dock_item_labels_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/contextual_dock_internal_text_padding" >

            <TextView
                android:id="@+id/contextual_dock_item_label"
                android:text="@string/ipsum"
                android:textColor="@color/primary_text_color"
                android:textSize="16dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxWidth="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/contextual_dock_item_divider"
                android:text="-"
                android:textColor="@color/primary_text_color"
                android:textSize="16dp"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/contextual_dock_item_secondary_label"
                android:text="@string/ipsum"
                android:textColor="@color/primary_text_color"
                android:textSize="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="80dp"
                android:gravity="start"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="SpUsage" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/contextual_dock_internal_padding_horizontal"
            android:layout_height="0dp" />
    </LinearLayout>
</FrameLayout>