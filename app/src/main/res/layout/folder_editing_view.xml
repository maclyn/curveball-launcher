<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- [ icon ] __app name ___ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/folder_icon_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_folder_white_48dp"
            android:contentDescription="@string/folder_icon_content_description" />

        <EditText
            android:id="@+id/folder_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:gravity="start"
            android:hint="@string/name_your_folder"
            android:inputType="text"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="@color/primary_text_color"
            android:textColorHint="@color/tertiary_text_color"
            android:imeOptions="actionDone"
            android:autofillHints="none" />
    </LinearLayout>

    <!-- Reorder dialog -->
    <include
        layout="@layout/reorder_item_container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="8dp" />
</LinearLayout>

