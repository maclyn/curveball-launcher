<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground"
    android:paddingVertical="@dimen/bottom_sheet_inner_margin"
    android:paddingHorizontal="@dimen/bottom_sheet_container_margin">

    <ImageView
        app:tint="@color/icon_tint_color"
        android:id="@+id/bottom_sheet_menu_item_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="@dimen/bottom_sheet_inner_margin" />

    <TextView
        android:id="@+id/bottom_sheet_menu_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text_color"
        android:textSize="16sp"
        android:layout_marginEnd="@dimen/bottom_sheet_inner_margin" />
</LinearLayout>